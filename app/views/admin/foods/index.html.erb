<div class="d-flex justify-content-between align-items-center">
  <div class="flex-grow-1"></div>
    <h1 class="mt-0 mb-5 text-center"><%= t "admin.foods.title" %></h1>
  <div class="flex-grow-1"></div>
</div>
<div class="container m-left">
  <div class="row d-flex align-items-start">
    <div class="col-md-8">
    <%= render partial: "topbar" %>
    </div>
    <div class="col-md-2 my-5">
      <%= link_to t("admin.foods.new.title"), new_admin_food_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<table class="table m-left">
  <thead>
    <tr>
      <th><%= t "admin.foods.image" %></th>
      <th><%= t "admin.foods.name" %></th>
      <th><%= t "admin.foods.available_item" %></th>
      <th><%= t "admin.foods.price" %></th>
      <th class="operations"><%= t "admin.foods.actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @foods.any? %>
      <%= render partial: "admin/shared/food", collection: @foods %>
    <% end %>
  </tbody>
</table>
<% if @foods.any? %>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
