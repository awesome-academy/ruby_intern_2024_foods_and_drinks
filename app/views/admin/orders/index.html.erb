<div class="container">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="row mb-3 text-center d-flex justify-content-center">
            <h2><%= t("orders.orders_history") %></h2>
          </div>
          <div class="col-md-6">
            <%= form_with(url: admin_orders_path, method: :get, local: true, class: "form-inline") do %>
              <div class="d-flex align-items-center">
                <%= label_tag :status, t("orders.filter_by_status"), class: "mb-2" %>
                <div class="form-group mx-sm-3 mb-2 d-flex align-items-center">
                  <%= select_tag :status, options_for_select(Order.statuses.keys.map { |status| [t("orders.#{status}"), status] }, params[:status]), include_blank: t("orders.all_statuses"), class: "form-control mr-2", style: "margin-right: 10px;" %>
                  <div>
                    <%= submit_tag t("foods.sidebar.filter"), class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th><%= t("orders.order_id") %></th>
            <th><%= t("orders.date_created") %></th>
            <th><%= t("orders.customer_name") %></th>
            <th><%= t("orders.address") %></th>
            <th><%= t("orders.phone_number") %></th>
            <th><%= t("orders.status") %></th>
            <th><%= t("orders.action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "order", collection: @orders %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center pt-3">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
