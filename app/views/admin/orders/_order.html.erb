 <tr>
  <td><%= link_to order.id, admin_order_path(id: order.id) %></td>
  <td><%= order.created_at.strftime(Settings.time_format) %></td>
  <td><%= order.customer_name %></td>
  <td><%= order.address %></td>
  <td><%= order.phone %></td>
  <%= form_with model: order, url: update_status_admin_order_path(id: order.id), method: :patch, local: true do |f| %>
    <td>
      <div class="form-group d-flex align-items-center">
        <%= f.select :status, options_for_select(select_status(order).map { |status| [t("orders.#{status}"), status] }, order.status), {}, class: "form-control #{status_class(order.status)} custom-select-width" %>
      </div>
    </td>
    <td>
      <div class="form-group d-flex align-items-center">
        <%= f.submit t('admin.foods.new.submit'), class: 'btn btn-primary btn-sm' %>
      </div>
    </td>
  <% end %>
</tr>
