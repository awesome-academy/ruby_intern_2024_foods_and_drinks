<%= form_for [:admin, @food], url: admin_food_path, method: :patch do |f| %>
  <div class="form-group row">
    <div class="col">
      <%= f.label :name, t("admin.shared.food_form.name"), class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <%= f.label :description, t("admin.shared.food_form.description"), class: "form-label" %>
      <%= f.text_area :description, placeholder: t("admin.shared.food_form.description_placeholder"), class: "form-control", rows: 3 %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <%= f.label :price, t("admin.shared.food_form.price"), class: "form-label" %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <%= f.label :image, t("admin.shared.food_form.image"), class: "form-label" %>
      <%= f.file_field :image, class: "form-control-file" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <%= f.label :category_id, t("admin.shared.food_form.category"), class: "form-label" %>
      <%= f.select :category_id, load_categories, {}, { class: "selectpicker form-control" } %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col">
      <%= f.label :available_item, t("admin.shared.food_form.available"), class: "form-label" %>
      <%= f.text_field :available_item, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit t("admin.foods.new.submit"), class: "btn btn-primary", data: { turbo: false } %>
  </div>
<% end %>
