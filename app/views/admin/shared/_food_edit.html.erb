<%= form_for [:admin, @food], url: admin_food_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :name, t("admin.shared.food_form.name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, t("admin.shared.food_form.description") %>
    <%= f.text_area :description, placeholder: t("admin.shared.food_form.description_placeholder"), class: "form-control", rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :price, t("admin.shared.food_form.price") %>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, t("admin.shared.food_form.image") %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, t("admin.shared.food_form.category") %>
    <%= f.select :category_id, load_categories, {}, { class: "selectpicker form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :available_item, t("admin.shared.food_form.available") %>
    <%= f.text_field :available_item, class: "form-control" %>
  </div>
  <%= f.submit t "admin.foods.new.submit", class: "btn btn-primary", data: { turbo: false } %>
<% end %>
