<div class="col-lg-12 mb-5 mt-5 ml-5 ">
    <h4 class="mt-5 mb-5 text-center"><strong><%= t("foods.details") %></strong></h4>
</div>
<div class="container mt-5 mb-5">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="main_image">
                        <% if @food.image.persisted? %>
                            <%= image_tag @food.image, class: "w-100 h-200" %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3><%= @food.name %></h3>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p><%= t("users.header.category") %> : <%= @food.category_name %></p>
                        <p><%= @food.description %></p>
                    </div>
                    <h3><%= number_to_currency(@food.price) %></h3>
                    <div class="ratings d-flex flex-row align-items-center mb-2">
                        <div class="d-flex align-items-center me-3">
                            <input class="form-control text-center me-2" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                            <p class="m-0" style="font-size: 1.2rem;"> / <%= @food.available_item || 0 %></p>
                        </div>
                    </div>
                    <div class="buttons d-flex flex-row mt-5 gap-3">
                        <button class="btn btn-outline-dark <%= item_avaiable @food %>"><%= t("foods.buy_now") %></button>
                        <button class="btn btn-dark <%= item_avaiable @food %>"><%= t("foods.add_to_cart") %></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
