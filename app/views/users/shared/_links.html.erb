<%- if controller_name != "sessions" %>
  <%= t "sign_up.already_have_account" %> <%= link_to t("login.title"), new_session_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= t "login.dont_have_account" %> <%= link_to t("sign_up.title"), new_registration_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("login.forgot_password"), new_password_path(resource_name) %><br />
<% end %>
