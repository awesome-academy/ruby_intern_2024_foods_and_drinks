<% provide :title, t("sign_up.title") %>
<section class="py-5 bg-light">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 rounded-3">
          <div class="card-header bg-white">
            <h3 class="text-center my-3 text-black"><%= t "sign_up.title" %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for @user, url: signup_path do |f| %>
              <%= render "profile", f: f %>
              <hr class="my-4">
               <p class="small fw-bold mt-2 pt-1 mb-0 text-center"> <%= t("sign_up.already_have_account") %> <%= link_to t("login.title"), login_path %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</section>
