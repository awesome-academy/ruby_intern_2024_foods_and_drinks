<% provide :title, t("sign_up.title") %>
<section class="py-5 bg-light">
  <div class="row">
    <div class="col-5 mx-auto">
      <div class="card border-0 rounded-3">
        <div class="card-header bg-white">
          <h3 class="text-center my-3 text-black"><%= t "update.title" %></h3>
        </div>
        <div class="card-body p-3 p-sm-5 fw-bold">
          <%= form_for @user, url: user_path(id: @user.id), method: :patch do |f| %>
            <%= render "profile_edit", f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
