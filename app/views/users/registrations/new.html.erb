<% provide :title, t("sign_up.title") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-header bg-black">
            <h3 class="text-center font-weight-light my-3 text-white"><%= t("sign_up.title") %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="mb-2">
                <%= f.label :first_name, required_label("sign_up.first_name"), autofocus: true %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :last_name, required_label("sign_up.last_name"), autofocus: true %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :email, required_label("sign_up.email") %>
                <%= f.text_field :email, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :password, required_label("sign_up.password") %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :password_confirmation, required_label("sign_up.password_confirmation") %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
              <div class="d-grid">
                <%= f.button t("signup.submit"), type: "submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
              <hr class="my-4">
              <div class="text-center">
                <%= render "users/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
