<% provide :title, t("update.title") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-header">
            <h3 class="text-center font-weight-light my-3"><%= t "update.title" %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
               <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, multipart: true }) do |f| %>
              <%= devise_error_messages! %>
              <div class="mb-2">
                <%= f.label :first_name , t("sign_up.first_name") , autofocus: true %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :last_name , t("sign_up.last_name") , autofocus: true %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :email, t("sign_up.email") %>
                <%= f.text_field :email, class: "form-control", disable: true %>
              </div>
                <div class="mb-2">
                <%= f.label :image, t("sign_up.image") %>
                <%= f.file_field :image, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :phone, t("sign_up.phone") %>
                <%= f.text_field :phone, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :address, t("sign_up.address") %>
                <%= f.text_field :address, class: "form-control" %>
              </div>
              <div class="d-grid">
                  <%= f.button t("sign_up.submit"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
