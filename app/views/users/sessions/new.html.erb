<% provide :title, t("login.title") %>
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-3">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 rounded-3 my-5">
          <div class="card-header bg-white">
            <h3 class="text-center my-3 text-black"><%= t "login.title" %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-2">
                <%= f.label :email, required_label("login.email") %>
                <%= f.text_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="mb-2">
                <%= f.label :password, required_label("login.password") %>
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
              </div>
              <div class="form-check mb-3">
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <span><%= t("login.remember") %></span>
                <% end %>
              </div>
              <div class="d-grid">
                  <%= f.button t("sign_up.submit"), type:"submit", class: "btn btn-dark btn-login fw-bold text-uppercase" %>
              </div>
              <hr class="my-4">
              <div class="text-center">
                <%= render "users/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
