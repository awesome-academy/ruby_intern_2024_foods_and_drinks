<% provide :title, t("text.login") %>
<section class="py-5 bg-light">
    <div class="row">
      <div class="col-5 mx-auto">
        <div class="card border-0 rounded-3 my-5">
          <div class="card-header bg-white">
            <h3 class="text-center my-3 text-black"><%= t "login.title" %></h3>
          </div>
          <div class="card-body p-3 p-sm-5 fw-bold">
            <%= form_for :session, url: login_path do |f| %>
              <div class="mb-2">
                <%= f.label :email, t("login.email") %>
                <%= f.text_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="mb-2">
                <%= f.label :password, t("login.password") %>
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
              </div>
              <div class="form-check mb-3">
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <span><%= t("login.remember") %></span>
                <% end %>
              </div>
              <div class="d-grid">
                <%= f.button t("login.title"), type: "submit", class: "btn btn-secondary" %>
              </div>
              <hr class="my-4">
               <p class="small fw-bold mt-2 pt-1 mb-0 text-center"> <%= t("login.dont_have_account") %> <%= link_to t("login.register"), signup_path %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</section>
